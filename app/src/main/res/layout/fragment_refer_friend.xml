<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/refer_friend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:text="We value your friends"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/refer_friend_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refer_friend_title"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="@string/refer_us"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/refer_friend_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/refer_a_friend"
            android:elevation="4dp"
            tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute" />

        <ImageView
            android:id="@+id/whatsapp_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/refer_friend_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/whatsapp_logo"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/whatsapp_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refer_friend_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="200dp"
            android:layout_toEndOf="@+id/fb_icon"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:text="Whatsapp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/whatsapp_reference"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/facebook_logo"
            android:elevation="4dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/fb_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatsapp_reference"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/fb_icon"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gmail_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/fb_reference"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/mail_logo"
            android:elevation="4dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/gmail_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_reference"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/fb_icon"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:text="Gmail"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>


