<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/firm_logo"
                    android:layout_width="200dp"
                    android:layout_height="96dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:elevation="4dp"
                    android:src="@drawable/laqshya_institue_logo"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firm_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Headquarter"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Mumbai, India" />

                <ImageView
                    android:id="@+id/mobile_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/location"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/mobile_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/mobile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/mobile_icon"
                    android:text="Mobile"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_title"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@id/mobile_icon"
                    android:text="9867722552"
                    android:textColor="@color/black" />

                <!--<ImageView-->
                    <!--android:id="@+id/telephone_icon"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_below="@+id/mobile_no"-->
                    <!--android:layout_marginStart="30dp"-->
                    <!--android:layout_marginTop="40dp"-->
                    <!--android:background="@drawable/telephone_icon"-->
                    <!--tools:ignore="ContentDescription" />-->

                <!--<TextView-->
                    <!--android:id="@+id/telephone_header"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/mobile_no"-->
                    <!--android:layout_marginStart="30dp"-->
                    <!--android:layout_marginTop="25dp"-->
                    <!--android:layout_toEndOf="@+id/telephone_icon"-->
                    <!--android:text="Telephone"-->
                    <!--android:textAllCaps="true" />-->

                <!--<TextView-->
                    <!--android:id="@+id/telephone_no"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/telephone_header"-->
                    <!--android:layout_marginStart="30dp"-->
                    <!--android:layout_toEndOf="@+id/telephone_icon"-->
                    <!--android:text="+022  1234 5678"-->
                    <!--android:textColor="@color/black" />-->

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/mobile_icon"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/mail_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/mail_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_no"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/mail_icon"
                    android:text="Email"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/mail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mail_header"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@+id/mail_icon"
                    android:text="lalaqshya@gmail.com"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fb_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/facebook_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/fb_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/fb_icon"
                    android:text="Facebook"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/fb_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fb_header"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="25dp"
                    android:layout_toEndOf="@+id/fb_icon"
                    android:text="Contact or follow us on Facebook"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/whatsapp_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/whatsapp_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/whatsapp_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/whatsapp_icon"
                    android:text="Whatsapp"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/whatsapp_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whatsapp_header"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="25dp"
                    android:layout_toEndOf="@+id/whatsapp_icon"
                    android:text="Contact Us on Whatsapp"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/location_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/location_icon"
                    android:text="Address"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_header"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="25dp"
                    android:layout_toEndOf="@+id/location_icon"
                    android:text="Andheri, Mumbai, India"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
