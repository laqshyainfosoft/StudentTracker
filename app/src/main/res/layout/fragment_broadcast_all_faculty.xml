<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/notificationMessageView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Send Notification to All Students"
            android:textAlignment="center"
            android:textColor="#030303"
            android:textSize="21sp" />

        <Spinner
            android:id="@+id/spinner_all_student"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:spinnerMode="dialog" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_All_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/txt_all_student_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_border_edittext"
                android:ems="10"
                android:foregroundGravity="top"
                android:gravity="top|start"
                android:hint="Title"
                android:inputType="textPersonName"
                android:maxLength="24"
                android:padding="2dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_All_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/txt_all_student__message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_border_edittext"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Message"
                android:inputType="textMultiLine"
                android:maxLength="160" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBoxAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Tick To Send SMS With Notification" />

        <Button
            android:id="@+id/btn_all__student_send"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rounded_border_edittext"
            android:text="@string/SendButton" />
    </LinearLayout>
</FrameLayout>

