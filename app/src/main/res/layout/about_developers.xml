    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/circle_new"
                android:elevation="4dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/laqshya_logo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/email_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/mail_logo"
                android:elevation="4dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/email_id"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/email_logo"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/email_logo"
                android:text="lalaqshya@gmail.com"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/mobile_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="30dp"
                android:layout_toStartOf="@+id/mobile_no"
                android:background="@drawable/mobile_icon"
                android:elevation="4dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mobile_no"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/mobile_logo"
                android:text="Mobile"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="+91 12345 67890"
                android:textColor="@color/black" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/social_media_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/whatsapp_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/whatsapp_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/whatsapp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/whatsapp_logo"
                    android:text="Whatsapp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/whatsapp_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whatsapp_title"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/whatsapp_logo"
                    android:text="+91 12345 67890" />

                <ImageView
                    android:id="@+id/facebook_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/whatsapp_no"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/facebook_logo" />

                <TextView
                    android:id="@+id/facebook_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whatsapp_no"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/facebook_logo"
                    android:text="Facebook"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/facebook_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/facebook_title"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/facebook_logo"
                    android:text="Follows us on Facebook" />

                <ImageView
                    android:id="@+id/website_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/facebook_id"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/internet"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/website_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/facebook_id"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/website_logo"
                    android:text="Website"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/website_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/website_title"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/website_logo"
                    android:text="www.laqshyainfosoft.com" />

                <ImageView
                    android:id="@+id/address_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/website_link"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/location_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/website_link"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/address_logo"
                    android:text="Address"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_title"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/address_logo"
                    android:text="Andheri, Mumbai India" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>